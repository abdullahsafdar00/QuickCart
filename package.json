{
  "name": "ecommerce-inngest",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "build:analyze": "set ANALYZE=true && next build",
    "build:prod": "set NODE_ENV=production && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "clean": "rimraf .next out node_modules/.cache",
    "optimize": "next-optimized-images",
    "optimize:db": "node scripts/optimize-db.js"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.23.2",
    "axios": "^1.10.0",
    "cloudinary": "^2.7.0",
    "framer-motion": "^10.12.16",
    "inngest": "^3.39.2",
    "lucide-react": "^0.525.0",
    "mongodb": "^6.0.0",
    "mongoose": "^8.16.1",
    "morgan": "^1.10.1",
    "next": "15.1.6",
    "nodemailer": "^7.0.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.5.1",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^14.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.1.6",
    "jest": "^29.7.0",
    "postcss": "^8",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.1"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node"
    ],
    "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/?(*.)+(spec|test).js?(x)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    }
  }
}